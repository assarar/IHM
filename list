from tkinter import*
import dbm, sys

root = Tk()
db = dbm.open("cache", "c")
dbm.writelines(Liste)

#définition
def get_list():
        index = listbox1.curselection()[0]
        seltxt = listbox1.get(index)
        enter1.delete(0, 50)
        enter1.insert(0, seltext)      
#Ajout des elements
def ajouterEL():
        listbox1.insert(END, enter1.get())
        
#supprission de l'element   
def supprimerEL():
                index = listbox1.curselection()[0]
                listbox1.delete(index)   
                
#Définition de la taille de la fenetre
listbox1 =Listbox(root, width=25, height=10)
listbox1.grid(row=0, column=0)

myscroll = Scrollbar(command=listbox1.yview, orient=VERTICAL)
myscroll.grid(row=0, column=1, sticky=N+S)
listbox1.configure(myscrollcommand=myscroll.set)

enter1 = Entry(root, width=25)
enter1.insert(0, '')
enter1.grid(row=1, column=0)

button = Button(root, text='Ajouter', command=ajouterEL)
button.grid(row=2, column=0, sticky=W)

button1 = Button(root, text='Supprimer', command=supprimerEL)
button1.grid(row=2, column=0, sticky=E)

root.mainloop()
